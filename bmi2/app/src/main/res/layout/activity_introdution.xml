<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/second_gradient">

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:translationY="500dp"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="BMI Calculator"
        android:textColor="#bfbfbf"
        android:translationX="120dp"
        android:translationY="20dp"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/bMan"
        android:layout_width="188dp"
        android:layout_height="188dp"
        android:onClick="onClick"
        android:translationX="10dp"
        android:translationY="40dp"
        app:srcCompat="@drawable/man2"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/bWoman"
        android:layout_width="188dp"
        android:layout_height="188dp"
        android:onClick="onClick"
        android:translationX="210dp"
        android:translationY="-148dp"
        app:srcCompat="@drawable/woman2"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Укажите ваш вес"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:translationX="120dp"
        android:translationY="-130dp" />

    <SeekBar
        android:id="@+id/skWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="110"
        android:translationY="-120dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Укажите ваш рост"
        android:textColor="@color/white"
        android:translationX="120dp"
        android:textSize="20sp"
        android:translationY="-100dp" />

    <SeekBar
        android:id="@+id/skHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="220"
        android:translationY="-80dp"/>

    <SeekBar
        android:id="@+id/skAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="95"
        android:translationY="10dp"/>

    <Button
        android:id="@+id/bRes"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#fcd0b3"
        android:onClick="Result"
        android:text="Посчитать BMI"
        android:textSize="18sp"
        android:translationX="60dp"
        android:translationY="40dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Укажите ваш возраст"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:translationX="110dp"
        android:translationY="-100dp" />

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:translationY="-300dp"/>

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:translationY="-240dp"/>

</LinearLayout>